@model WeChatForTraining.ViewModel.ViewSubject

@{
    ViewBag.Title = "科目信息";
    Layout = "~/Views/Shared/managerLayout.cshtml";
}


@using (Html.BeginForm("SubjectEdit", "Dictionary", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2">科目名称</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">科组长</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model=>model.manager,ViewBag.Managers as List<SelectListItem>, "----请选择----", new { @class= "select form-control" })
                @Html.ValidationMessageFor(model => model.manager, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">科目介绍</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.introduce, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.introduce, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10" style="color:red;">
                @ViewBag.msg
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-success" />
                &nbsp;@Html.ActionLink("返回列表", "SysSubjectList", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script>
    $(function () {
        $('.syssubject').addClass('active');
    });
</script>