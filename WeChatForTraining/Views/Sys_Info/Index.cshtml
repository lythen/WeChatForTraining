@model Lythen.Models.Sys_Info

@{
    ViewBag.Title = "公司信息";
    Layout = "~/Views/Shared/managerLayout.cshtml";
}


@using (Html.BeginForm("Edit", "Sys_Info",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.company_id)

        <div class="form-group">
            <label class="control-label col-md-2">公司名称</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.company_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.company_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">公司地址</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.company_address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.company_address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">公司电话</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.company_phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.company_phone, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">公司介绍</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.company_introduce, new { @class = "form-control" ,@style="min-height:200px;"})
                @Html.ValidationMessageFor(model => model.company_introduce, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10" style="color:red;">
                @ViewBag.msg
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script>
    $(function () {
        $('.sys_info').addClass('active');
    });
</script>